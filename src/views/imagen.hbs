<style>
  body {
    background: #fff;
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
  }

  .swiper-container {
    width: 100%;
    padding-top: 10px;
    padding-bottom: 50px;
    margin: 0 auto;
  }

  .swiper-slide {
    background-position: center;
    background-size: cover;
    width: 300px;
    height: 450px;
  }
</style>
<div class="swiper-container">
  <div class="swiper-wrapper">
    {{#each imagenes}}
    <img src="{{imagenPath}}" alt="" class="swiper-slide">
    {{/each}}
  </div>
  <div class="swiper-pagination"></div>
</div>